{
  "bail": 1,
  "testEnvironment": "jsdom",
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,tsx,ts}",
    "!**/node_modules/**",
    "!docs"
  ],
  "coverageDirectory": "coverage",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/.next/"
  ],
  "moduleNameMapper": {
    "~/(.*)": [
      "<rootDir>/src/$1"
    ]
  }
}
