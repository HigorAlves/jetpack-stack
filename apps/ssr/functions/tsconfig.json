{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": [
    "node_modules",
    "metro.config.js",
    "jest.config.js",
    "**/*.test.ts",
    "**/*.spec.ts",
    "../src"
  ],
  "typeRoots": ["node_modules/@types"]
}
